        const products = [
            { id: 1, type: 'ai', title: 'AI Business Blueprint v2.0', price: '$49.99', image: 'fa-robot' },
            { id: 2, type: 'dropshipping', title: 'Global Dropshipping Guide', price: '$29.99', image: 'fa-shipping-fast' },
