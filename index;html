        // --- DOM ELEMENTS ---
        const featureContainer = document.getElementById('feature-buttons-container');
        const detailTitle = document.getElementById('detail-title');
        const detailDesc = document.getElementById('detail-desc');
        const detailList = document.getElementById('detail-list');
        const detailIcon = document.getElementById('detail-icon');
        const detailIconBg = document.getElementById('detail-icon-bg');
        const productGrid = document.getElementById('product-grid');

        // --- INITIALIZATION ---

        function init() {
            renderFeatures();
            selectFeature(0); // Select first feature by default
            renderProducts('all');
            initCharts();
        }

        // --- FEATURE SECTION LOGIC ---

        function renderFeatures() {
            featureContainer.innerHTML = features.map((f, index) => `
                <button onclick="selectFeature(${index})" class="feature-btn flex flex-col items-center justify-center p-4 bg-white border border-gray-200 rounded-lg hover:border-yellow-400 hover:shadow-md transition-all text-center group h-32">
                    <i class="fas ${f.icon} text-2xl text-gray-400 group-hover:text-yellow-600 mb-2 transition-colors"></i>
                    <span class="text-xs font-bold text-gray-700 group-hover:text-black">${f.title}</span>
                </button>
            `).join('');
        }

        function selectFeature(index) {
            const f = features[index];
            
            // Update Text
            detailTitle.textContent = f.title;
            detailDesc.textContent = f.desc;
            
            // Update List
            detailList.innerHTML = f.points.map(p => `
                <li class="flex items-center text-gray-700">
                    <span class="w-2 h-2 bg-yellow-400 rounded-full mr-3"></span>
                    ${p}
                </li>
            `).join('');

            // Update Icons
            detailIcon.className = `fas ${f.icon}`;
            detailIconBg.className = `fas ${f.icon} text-9xl`;

            // Update Buttons State
            const buttons = document.querySelectorAll('.feature-btn');
            buttons.forEach((btn, i) => {
                if (i === index) {
                    btn.classList.add('border-yellow-500', 'ring-1', 'ring-yellow-500', 'bg-yellow-50');
                    btn.classList.remove('border-gray-200', 'bg-white');
                } else {
                    btn.classList.remove('border-yellow-500', 'ring-1', 'ring-yellow-500', 'bg-yellow-50');
                    btn.classList.add('border-gray-200', 'bg-white');
                }
            });
        }

        // --- PRODUCT MARKETPLACE LOGIC ---

        function renderProducts(filter) {
            const filtered = filter === 'all' ? products : products.filter(p => p.type === filter);
            
            productGrid.innerHTML = filtered.map(p => `
                <div class="bg-white rounded-lg border border-gray-100 shadow-sm hover:shadow-lg transition-shadow p-5 flex flex-col items-center text-center group">
                    <div class="w-16 h-16 bg-gray-50 rounded-full flex items-center justify-center mb-4 group-hover:bg-gray-900 transition-colors">
                        <i class="fas ${p.image} text-2xl text-gray-400 group-hover:text-white"></i>
                    </div>
                    <h4 class="font-bold text-gray-900 mb-1">${p.title}</h4>
                    <p class="text-yellow-600 font-semibold mb-4">${p.price}</p>
                    <button class="w-full mt-auto py-2 border border-gray-200 rounded text-sm text-gray-600 hover:bg-gray-900 hover:text-white transition-colors">
                        View Details
                    </button>
                </div>
            `).join('');
        }

        function filterProducts(type) {
            renderProducts(type);
            
            // Update Filter Buttons Styling
            const buttons = document.querySelectorAll('.filter-btn');
            buttons.forEach(btn => {
                if (btn.onclick.toString().includes(`'${type}'`)) {
                    btn.classList.add('bg-gray-900', 'text-white', 'shadow-md');
                    btn.classList.remove('bg-white', 'text-gray-600', 'hover:bg-gray-100');
                } else {
                    btn.classList.remove('bg-gray-900', 'text-white', 'shadow-md');
                    btn.classList.add('bg-white', 'text-gray-600', 'hover:bg-gray-100');
                }
            });
        }

        // --- CHARTS LOGIC ---

        let adminChartInstance = null;

        function initCharts() {
            // 1. Admin Sales Chart
            const adminCtx = document.getElementById('adminChart').getContext('2d');
            
            const gradient = adminCtx.createLinearGradient(0, 0, 0, 400);
            gradient.addColorStop(0, 'rgba(197, 160, 89, 0.2)'); // Gold low opacity
            gradient.addColorStop(1, 'rgba(197, 160, 89, 0)');

            adminChartInstance = new Chart(adminCtx, {
                type: 'line',
                data: {
                    labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                    datasets: [{
                        label: 'Revenue ($)',
                        data: [1200, 1900, 1500, 2200, 1800, 2800, 3100],
                        borderColor: '#C5A059', // Gold
                        backgroundColor: gradient,
                        borderWidth: 2,
                        tension: 0.4,
                        fill: true,
                        pointBackgroundColor: '#fff',
                        pointBorderColor: '#C5A059',
                        pointRadius: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            backgroundColor: '#1A1A1A',
                            titleColor: '#fff',
                            bodyColor: '#fff',
                            displayColors: false,
                            padding: 10,
                            callbacks: {
                                label: function(context) {
                                    return '$ ' + context.parsed.y;
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { color: '#f3f4f6' },
                            ticks: { color: '#9ca3af', callback: (value) => '$' + value }
                        },
                        x: {
                            grid: { display: false },
                            ticks: { color: '#9ca3af' }
                        }
                    }
                }
            });

            // 2. Category Distribution Doughnut Chart
            const catCtx = document.getElementById('categoryChart').getContext('2d');
            new Chart(catCtx, {
                type: 'doughnut',
                data: {
                    labels: ['AI Tools', 'Courses', 'Templates', 'Frameworks'],
                    datasets: [{
                        data: [35, 25, 25, 15],
                        backgroundColor: [
                            '#1A1A1A', // Dark
                            '#4B5563', // Gray
                            '#C5A059', // Gold
                            '#E5E7EB'  // Light Gray
                        ],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'right',
                            labels: {
                                usePointStyle: true,
                                boxWidth: 8
                            }
                        }
                    }
                }
            });
        }

        // --- INTERACTION LOGIC ---

        function updateChart(timeframe) {
            let newData, newLabels;
            
            if (timeframe === 'week') {
                newLabels = ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'];
                newData = [1200, 1900, 1500, 2200, 1800, 2800, 3100];
            } else if (timeframe === 'month') {
                newLabels = ['Wk 1', 'Wk 2', 'Wk 3', 'Wk 4'];
                newData = [8500, 9200, 7800, 11000];
            } else {
                newLabels = ['Jan', 'Feb', 'Mar'];
                newData = [32000, 28000, 35000];
            }

            adminChartInstance.data.labels = newLabels;
            adminChartInstance.data.datasets[0].data = newData;
            adminChartInstance.update();
        }

        function scrollToSection(id) {
            document.getElementById(id).scrollIntoView({ behavior: 'smooth' });
        }

        // Start App
        init();

    </script>
</body>
</html>
